<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Read</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a class="text-blue-500" href="/">Back to Home</a>
        <h1 class="tracking-tighter mt-10 text-3xl mb-4">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <!-- first user -->
             <% if(users.length>0){%>
                <% users.forEach(function(user){ %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full h-60 rounded-lg bg-zinc-600 overflow-hidden">
                    <img class="w-full h-full object-cover object-top" src="<%= user.image %>" alt="">
                </div>
                <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                <h5 class="text-xl text-blue-700"><%= user.email %></h5>
                <div class="flex gap-3">
                    <a class="text-amber-300 mt-5" href="/edit/<%= user._id %>">Edit User</a>
                    <a class="text-red-500 ml-24 mt-5" href="/delete/<%= user._id %>">Delete User</a>
                </div>
            </div>
             <% }) %>
             <%}else{%>
                <h3 class="text-amber-300">No Users Yet...</h3>
             <%} %>
        </div>
    </div>
</body>
</html>